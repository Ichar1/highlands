<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    tools:context=".Guard.ItemsLeftTruck">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/checkitem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_600sdp"

                android:layout_marginRight="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/checkitems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_13sdp"
                        android:layout_marginBottom="@dimen/_168sdp"
                        android:text="@string/ITEMSLEFT"
                        android:textColor="#2699FB"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/category"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_32sdp"
                    android:text="Check items category 1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button15"
                    android:layout_width="@dimen/_166sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_90sdp"
                    android:layout_marginTop="@dimen/_59sdp"
                    android:background="@drawable/rounded_button"
                    android:text="CHECK/UNCHECK ALL"
                    android:textColor="#FFFFFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_70sdp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_110sdp"
                        android:layout_weight="1"
                        android:text="ITEM" />

                    <CheckBox
                        android:id="@+id/checkBox15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_110sdp"
                        android:layout_weight="1"
                        android:text="ITEM" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_128sdp"
                    android:layout_marginStart="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox14"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_112sdp"
                        android:layout_weight="1"
                        android:text="ITEM" />

                    <CheckBox
                        android:id="@+id/checkBox16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_112sdp"
                        android:layout_weight="1"
                        android:text="ITEM" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/checkitem2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_184sdp"
                android:layout_margin="@dimen/_5sdp">

                <TextView
                    android:id="@+id/category2"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Check items category 2"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btncheck2"
                    android:layout_width="@dimen/_166sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_90sdp"
                    android:layout_marginTop="@dimen/_38sdp"
                    android:background="@drawable/rounded_button"
                    android:text="CHECK/UNCHECK ALL"
                    android:textColor="#FFFFFF" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_70sdp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/item7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_85sdp"
                        android:layout_weight="1"
                        android:text="ITEM" />

                    <CheckBox
                        android:id="@+id/item8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_85sdp"
                        android:layout_weight="1"
                        android:text="ITEM" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/item10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_85sdp"
                        android:layout_weight="1"
                        android:text="ITEM" />

                    <CheckBox
                        android:id="@+id/item11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_85sdp"
                        android:layout_weight="1"
                        android:text="ITEM" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/checkitemleft"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_224sdp"
                android:layout_margin="@dimen/_5sdp">

                <TextView
                    android:id="@+id/category4"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Check items category3"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btncheck3"
                    android:layout_width="@dimen/_166sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_90sdp"
                    android:layout_marginTop="@dimen/_38sdp"
                    android:background="@drawable/rounded_button"
                    android:text="CHECK/UNCHECK ALL"
                    android:textColor="#FFFFFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/item1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_85sdp"
                        android:layout_weight="1"
                        android:text="ITEM" />

                    <CheckBox
                        android:id="@+id/item2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_85sdp"
                        android:layout_weight="1"
                        android:text="ITEM" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/item15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_85sdp"
                        android:layout_weight="1"
                        android:text="ITEM" />

                    <CheckBox
                        android:id="@+id/item16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_85sdp"
                        android:layout_weight="1"
                        android:text="ITEM" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnsubmit2"
                        android:layout_width="@dimen/_106sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginStart="@dimen/_70sdp"
                        android:layout_marginTop="@dimen/_175sdp"
                        android:background="@drawable/rounded_button"
                        android:text="SUBMIT"
                        android:textColor="#FFFFFF" />


                    <Button
                        android:id="@+id/btncheckout"
                        android:layout_width="@dimen/_106sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_175sdp"
                        android:background="@drawable/rounded_button"
                        android:text="CHECKOUT"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>